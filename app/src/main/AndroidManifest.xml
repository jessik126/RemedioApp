<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cursoandroid.jesscampos.remedioapp">

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.BLUETOOTH_PRIVILEGED"/>

    <application
        android:name=".Bluetooth.GerenciadorBluetooth"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MenuPrincipal">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Cadastrar"/>
        <!--<activity android:name=".MenuPrincipal"/>-->
        <activity android:name=".MenuRemedio"/>
        <activity android:name=".Remedio.Inserir"/>
        <activity android:name=".Remedio.Listar"/>
        <activity android:name=".Remedio.Editar"/>
        <activity android:name=".Remedio.Historico"/>
        <activity android:name=".Bluetooth.Conectar"/>
    </application>

</manifest>