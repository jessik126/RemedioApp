<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:background="@drawable/remediobg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/parear"
        android:id="@+id/tvParear" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="69dp">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onoff"
            android:id="@+id/btBluetoothOnOff"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discoverability"
            android:id="@+id/btBluetoothDiscoverability"
            android:layout_gravity="center_horizontal"
            android:layout_alignTop="@+id/btBluetoothOnOff"
            android:layout_toEndOf="@+id/btBluetoothOnOff" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discover"
            android:id="@+id/btBluetoothDiscover"
            android:layout_gravity="center_horizontal"
            android:layout_alignTop="@+id/btBluetoothDiscoverability"
            android:layout_toEndOf="@+id/btBluetoothDiscoverability" />
    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/lvNewDevices" />


</LinearLayout>